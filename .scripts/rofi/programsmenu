#!/bin/bash

res=$(echo "2:Messenger|3:Chrome|4:Thunar|5:Atom|6:Steam|9:Evolution|0:Spotify" |
rofi -sep "|" -dmenu -i -p 'Programy ' "" -auto-select)

if [ $res = "5:Atom" ]; then
  atom
fi
if [ $res = "3:Chrome" ]; then
  google-chrome-unstable
fi
if [ $res = "4:Thunar" ]; then
  thunar
fi
if [ $res = "2:Messenger" ]; then
  messengerfordesktop
fi
if [ $res = "0:Spotify" ]; then
    spotify --force-device-scale-factor=1.0000001
fi
if [ $res = "6:Steam" ]; then
    LD_PRELOAD='/usr/$LIB/libstdc++.so.6 /usr/$LIB/libgcc_s.so.1 /usr/$LIB/libxcb.so.1 /usr/$LIB/libgpg-error.so' steam
fi
if [ $res = "9:Evolution" ]; then
    evolution
fi
exit 0
